@model IEnumerable<EXAPARCIALALVARO.Models.Matricula>

@{
    ViewData["Title"] = "Mis Matrículas";
}
<!-- Botón para volver al inicio -->
<div class="mb-4">
    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-danger">
        <i class="bi bi-arrow-left"></i> Volver al Inicio
    </a>
</div>
<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var matricula in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@matricula.Curso?.Nombre</h5>
                            <span class="badge @GetBadgeClass(matricula.Estado)">
                                @matricula.Estado
                            </span>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Código:</strong> @matricula.Curso?.Codigo<br>
                                <strong>Créditos:</strong> @matricula.Curso?.Creditos<br>
                                <strong>Horario:</strong> @matricula.Curso?.HorarioInicio.ToString(@"hh\:mm") - @matricula.Curso?.HorarioFin.ToString(@"hh\:mm")<br>
                                <strong>Fecha de registro:</strong> @matricula.FechaRegistro.ToString("dd/MM/yyyy HH:mm")<br>
                                <strong>Cupo disponible:</strong> @matricula.Curso?.CupoDisponible / @matricula.Curso?.CupoMaximo
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Details", "Cursos", new { id = matricula.CursoId })" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> Ver Curso
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h5 class="alert-heading">No tienes matrículas</h5>
            <p class="mb-0">Aún no te has inscrito en ningún curso. <a href="@Url.Action("Index", "Cursos")" class="alert-link">Explora el catálogo de cursos</a> para comenzar.</p>
        </div>
    }
</div>

@functions {
    string GetBadgeClass(EstadoMatricula estado)
    {
        return estado switch
        {
            EstadoMatricula.Confirmada => "bg-success",
            EstadoMatricula.Pendiente => "bg-warning text-dark",
            EstadoMatricula.Cancelada => "bg-danger",
            _ => "bg-secondary"
        };
    }
}