@{
    ViewData["Title"] = "Inicio - Sistema de Matrículas";
}

<div class="row">
    <div class="col-12">
        <div class="text-center mb-5">
            <h1 class="display-4 text-danger fw-bold">
                <i class="bi bi-mortarboard-fill"></i>
                
            </h1>
            <p class="lead text-muted">
                Gestiona tu matrícula e inscripción a cursos de manera simple y eficiente
            </p>
        </div>
    </div>
</div>

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <!-- Panel para Usuarios Autenticados -->
    <div class="row">
        <!-- Panel de Estudiante -->
        @if (!User.IsInRole("Coordinador"))
        {
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-person-check"></i>
                            Panel del Estudiante
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-3 border rounded">
                                    <i class="bi bi-book text-danger fs-2 me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Catálogo de Cursos</h6>
                                        <p class="mb-0 text-muted small">Explora y busca cursos disponibles</p>
                                        <a href="/Cursos" class="btn btn-sm btn-outline-danger mt-2">Ver Cursos</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-3 border rounded">
                                    <i class="bi bi-clipboard-check text-danger fs-2 me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Mis Matrículas</h6>
                                        <p class="mb-0 text-muted small">Gestiona tus cursos inscritos</p>
                                        <a href="/Matriculas/MisMatriculas" class="btn btn-sm btn-outline-danger mt-2">Ver Matrículas</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Panel de Coordinador -->
        @if (User.IsInRole("Coordinador"))
        {
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-gear"></i>
                            Panel del Coordinador
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-3 border rounded">
                                    <i class="bi bi-speedometer2 text-danger fs-2 me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Dashboard</h6>
                                        <p class="mb-0 text-muted small">Resumen general del sistema</p>
                                        <a href="/Coordinador" class="btn btn-sm btn-outline-danger mt-2">Ir al Dashboard</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-3 border rounded">
                                    <i class="bi bi-plus-circle text-danger fs-2 me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Gestionar Cursos</h6>
                                        <p class="mb-0 text-muted small">Crear y administrar cursos</p>
                                        <a href="/Coordinador/CrearCurso" class="btn btn-sm btn-outline-danger mt-2">Nuevo Curso</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-3 border rounded">
                                    <i class="bi bi-people text-danger fs-2 me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Gestionar Matrículas</h6>
                                        <p class="mb-0 text-muted small">Administrar inscripciones</p>
                                        <a href="/Coordinador/Matriculas" class="btn btn-sm btn-outline-danger mt-2">Ver Matrículas</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-3 border rounded">
                                    <i class="bi bi-list-ul text-danger fs-2 me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Lista de Cursos</h6>
                                        <p class="mb-0 text-muted small">Ver todos los cursos</p>
                                        <a href="/Coordinador/ListaCursos" class="btn btn-sm btn-outline-danger mt-2">Gestionar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Información del Sistema -->
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="text-danger mb-4">
                        <i class="bi bi-info-circle"></i>
                        Información del Sistema
                    </h5>
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-check-circle text-success fs-1"></i>
                                <h6 class="mt-2">Matrícula Sencilla</h6>
                                <p class="small text-muted mb-0">Proceso de inscripción simplificado</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-clock text-warning fs-1"></i>
                                <h6 class="mt-2">Disponible 24/7</h6>
                                <p class="small text-muted mb-0">Acceso en cualquier momento</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-shield-check text-primary fs-1"></i>
                                <h6 class="mt-2">Seguro</h6>
                                <p class="small text-muted mb-0">Tus datos protegidos</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Panel para Usuarios No Autenticados -->
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-5">
                    <i class="bi bi-mortarboard text-danger display-1 mb-4"></i>
                    <h3 class="text-danger mb-3">Bienvenido al Sistema</h3>
                    <p class="text-muted mb-4">
                        Accede al sistema para gestionar tu matrícula e inscripción a cursos académicos.
                    </p>
                    <div class="d-grid gap-2 d-md-block">
                        <a href="/Identity/Account/Login" class="btn btn-danger btn-lg me-md-3">
                            <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                        </a>
                        <a href="/Identity/Account/Register" class="btn btn-outline-danger btn-lg">
                            <i class="bi bi-person-plus"></i> Registrarse
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Características -->
    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="text-center">
                <i class="bi bi-book text-danger fs-1 mb-3"></i>
                <h5 class="text-danger">Cursos Disponibles</h5>
                <p class="text-muted">Explora el catálogo completo de cursos académicos disponibles para inscripción.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="text-center">
                <i class="bi bi-clipboard-check text-danger fs-1 mb-3"></i>
                <h5 class="text-danger">Matrícula Simple</h5>
                <p class="text-muted">Proceso de matrícula intuitivo y rápido para todos los estudiantes.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="text-center">
                <i class="bi bi-clock-history text-danger fs-1 mb-3"></i>
                <h5 class="text-danger">Seguimiento</h5>
                <p class="text-muted">Consulta tu historial de cursos y matrículas en cualquier momento.</p>
            </div>
        </div>
    </div>
}

<!-- Información de Contacto -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card border-0 bg-light">
            <div class="card-body text-center py-4">
                <h6 class="text-danger mb-2">¿Necesitas ayuda?</h6>
                <p class="text-muted mb-0 small">
                    Contacta al departamento de sistemas para soporte técnico o consultas sobre el proceso de matrícula.
                </p>
            </div>
        </div>
    </div>
</div>